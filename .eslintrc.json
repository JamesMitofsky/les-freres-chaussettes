{
  "extends": [
    "airbnb",
    "airbnb-typescript",
    "airbnb/hooks",
    "next/core-web-vitals",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    // address ShadCN UI errors for imported components
    "react/jsx-props-no-spreading": "off",
    "react/require-default-props": "off"
  }
}
